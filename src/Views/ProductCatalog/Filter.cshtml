@model ProductCatalogUI.Models.FilterProductsViewModel

@{
    ViewData["Title"] = "Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Product details</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Filter" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control col-md-4" maxlength="10" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" maxlength="100" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartPrice" class="control-label"></label>
                <input asp-for="StartPrice" class="form-control col-md-4" />
                <span asp-validation-for="StartPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndPrice" class="control-label"></label>
                <input asp-for="EndPrice" class="form-control col-md-4" />
                <span asp-validation-for="EndPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter products" class="btn btn-primary btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
